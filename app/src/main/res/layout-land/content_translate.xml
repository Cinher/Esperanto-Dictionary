<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:elevation="5dp"
            android:layout_margin="@dimen/activity_vertical_margin"
            card_view:cardCornerRadius="8dp">

            <EditText
                android:id="@+id/translate_edit_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter text (Esperanto)"
                android:inputType="textCapSentences|textMultiLine|textNoSuggestions"
                android:textIsSelectable="true" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:elevation="5dp"
            android:layout_margin="@dimen/activity_vertical_margin"
            card_view:cardCornerRadius="8dp">

            <EditText
                android:id="@+id/translate_edit_message2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Translation (English)"
                android:editable="false"
                android:textIsSelectable="true"
                android:windowSoftInputMode="stateVisible" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/translate_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_translate_white_48dp" />

</android.support.design.widget.CoordinatorLayout>